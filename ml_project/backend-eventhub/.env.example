# Database
DATABASE_URL="postgresql://user:password@localhost:5432/eventhub?schema=public"

# JWT Secrets (use strong random strings in production)
JWT_ACCESS_SECRET="your_access_secret_min_32_chars_change_this_in_production"
JWT_REFRESH_SECRET="your_refresh_secret_min_32_chars_change_this_in_production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="30d"

# SMS Configuration
SMS_PROVIDER="console"  # Options: console, twilio
# TWILIO_SID="your_twilio_sid"
# TWILIO_TOKEN="your_twilio_token"
# TWILIO_FROM="+1234567890"

# Storage Configuration
STORAGE_DRIVER="local"  # Options: local, s3
UPLOAD_DIR="./uploads"
# S3_BUCKET="your-bucket-name"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY="your-access-key"
# S3_SECRET_KEY="your-secret-key"

# CORS
APP_ORIGIN="http://localhost:3000"

# Server
PORT=3002
NODE_ENV="development"  # Options: development, production, test

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_WINDOW_MS=60000  # 1 minute

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=30

